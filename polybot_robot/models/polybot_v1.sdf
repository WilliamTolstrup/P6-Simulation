<?xml version='1.0'?>
<sdf version='1.4'>
  <model name="polybot">
  <static>false</static>
  
  %MAIN BODY
  <link name='base_link'>  <!-- WAS chassis -->
    <pose>0 0 0.2 0 0 0</pose>
    <collision name='chassis_collision'>
      <geometry>
        <box>
          <size>0.5 0.34 0.01</size>
        </box>
      </geometry>
    </collision>
    
    <visual name='chassis_visual'>
      <geometry>
        <mesh>
          <uri>package://polybot_robot/meshes/Chassis.stl</uri>
          <scale>0.0015 0.0015 0.0015</scale>
        </mesh>
      </geometry>
    </visual>
    
    %CASTER WHEEL
    
    <collision name='caster_collision'>
      <pose>0.165 0 0.03 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.075</radius>
          </sphere>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name='caster_visual'>
        <pose>0.165 0 0.03 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.075</radius>
          </sphere>
        </geometry>
      </visual>
      
  </link>
  
  %WHEEL LEFT
  
  <link name='wheel_left'>
    <pose>-0.08 -0.18 0.255 0 1.5707 1.5707</pose>
    <collision name='collision'>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length>0.02</length>
        </cylinder>
      </geometry>
    </collision>
    
    <visual name='visual'>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length>0.02</length>
        </cylinder>
      </geometry>
    </visual>
  </link>
  
  %WHEEL RIGHT
  
  <link name='wheel_right'>
    <pose>-0.08 0.18 0.255 0 1.5707 1.5707</pose>
    <collision name='collision'>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length>0.02</length>
        </cylinder>
      </geometry>
    </collision>
    
    <visual name='visual'>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length>0.02</length>
        </cylinder>
      </geometry>
    </visual>
  </link>
  
  %JOINT LEFT
  
  <joint type="revolute" name="left_wheel_hinge">
    <pose>0 0 0 0 0 0</pose>
    <child>wheel_left</child>
    <parent>base_link</parent>
    <axis>
      <xyz>0 1 0</xyz>
    </axis>
  </joint>
  
  %JOINT RIGHT
  
  <joint type='revolute' name='right_wheel_hinge'>
    <pose>0 0 0 0 0 0</pose>
    <child>wheel_right</child>
    <parent>base_link</parent>
    <axis>
      <xyz>0 1 0</xyz>
    </axis>
  </joint> 
  </model>
</sdf>
